<p id="notice"><%= notice %></p>

<h1>Stores</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Image</th>
      <th>Address</th>
      <th>Suburb</th>
      <th>State</th>
      <th>Postcode</th>
      <th>About</th>
      <th>Roasting schedule</th>
      <th>Next roast</th>
      <th>Pickup</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.user %></td>
        <td><%= store.name %></td>
        <td><%= image_tag @store.image_url(:original) %></td>
        <td><%= store.address %></td>
        <td><%= store.suburb %></td>
        <td><%= store.state %></td>
        <td><%= store.postcode %></td>
        <td><%= store.about %></td>
        <td><%= store.roasting_schedule %></td>
        <td><%= store.next_roast %></td>
        <td><%= store.pickup %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Store', new_store_path %>
